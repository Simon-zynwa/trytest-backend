<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.UserMapper">
    <insert id="InsertUser">
        insert into user (username, password) values (#{username}, #{password});
    </insert>
    <insert id="batchInsert">
        INSERT INTO user (username, password, phone, email, identity_card)
        VALUES
        <foreach collection="list" item="user" separator=",">
            (#{user.username}, #{user.password}, #{user.phone}, #{user.email}, #{user.identityCard})
        </foreach>
    </insert>

    <update id="updateUserMessage">
        UPDATE `user`
        SET
            `phone` = #{phone},
            `email` = #{email},
            `identity_card` = #{identityCard}
        WHERE `username` = #{username};
    </update>

    <select id="SelectByUsername" resultType="org.example.pojo.entity.User">
        select username, password, email, phone, identity_card from user where username=#{username};
    </select>
    
    <select id="SelectByEmail" resultType="org.example.pojo.entity.User">
        select username, email, phone, identity_card from user where email=#{email};
    </select>
    
    <select id="selectAllUser" resultType="org.example.pojo.entity.User">
        select username, email, phone, identity_card from user;
    </select>
    <select id="SelectByPhone" resultType="org.example.pojo.entity.User">
        select username,password, email, phone, identity_card from user where phone=#{phone};
    </select>
    <select id="selectUsernames" resultType="java.lang.String">
        SELECT username
        FROM user  <!-- 假设数据库表名为user，根据实际表名调整 -->
        WHERE username IN
        <foreach collection="list" item="username" open="(" separator="," close=")">
            #{username}  <!-- 遍历传入的用户名列表，拼接IN条件 -->
        </foreach>
    </select>
</mapper>